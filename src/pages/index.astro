  .hero__overlay { position:absolute; inset:0; background:rgba(0,0,0,0.65); }
  .hero__content { position:relative; z-index:2; color:#fff; max-width:900px; padding:1.5rem; }
  .hero h1 { font-size:2.6rem; margin:0 0 .5rem; }
  .hero .accent { color:#E66A00; font-size:1.6rem; margin-bottom:0.8rem; }

  /* ---- Sections ---- */
