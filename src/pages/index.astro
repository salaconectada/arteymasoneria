  .card { background:#fff; padding:1.6rem; border-radius:10px; box-shadow:0 8px 20px rgba(0,0,0,0.06); }
  .grid-concurso { display:grid; gap:1.25rem; grid-template-columns: repeat(2, 1fr); max-width:1200px; margin:0 auto; }
